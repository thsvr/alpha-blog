<p>Listing all articles</p>

<%= link_to "Create new article", new_article_path %>

<table>

    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td> <%= article.title %> </td>
            <td> <%= article.description %> </td>
        </tr>
        <% end %>

</table>